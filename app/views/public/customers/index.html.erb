<h1>ユーザー一覧</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= image_tag customer.get_profile_image(80,80)  %></td>
        <td><%= link_to public_customer_path(customer.id) do%>
              <%= customer.name %>
              <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>