<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>name</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= image_tag movie.customer.get_profile_image(80,80)  %></td>
        <td><%= movie.customer.name %></td>
        <td><%= link_to public_movie_path(movie.id) do%>
              <%= movie.content%>
              <% end %>
        </td>
        <td><%= link_to "#{movie.comments.count} コメント", public_movie_path(movie.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if customer_signed_in? %>
<%= link_to 'New Movie', new_public_movie_path %>
<% end %>
