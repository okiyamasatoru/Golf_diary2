<h1 class="text-center">ユーザー一覧</h1>
<table class="table table-hover table-inverse">
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= image_tag customer.get_profile_image(80,80)  %></td>
        <td><%= link_to admin_customer_path(customer.id) do%>
              <%= customer.name %>
              <% end %>
        <td><%= customer.is_deleted %></td>      
        </td>
      </tr>
    <% end %>
  </tbody>
</table>